@using Crud.Net.Constant
                      @*Using LayOUT to determine which appear in page *@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Crud.Net</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Crud.Net.styles.css" asp-append-version="true" />
              @*Add link of bootstrap.cs which we added in wwwroot file*@
    <link href="~/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="~/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link href="toastr.css" rel="stylesheet"

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Crud.Net</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>                      
                        </li>
                                   @* making link in home page using to show movies page *@
                        <li>
                        <a class="nav-link text-dark" asp-controller="Movies" asp-action="Index">Movies</a>
                        </li>

                            @* making link in home page using to show User list page *@

                            @*cheack the login user exist in package of super admin or not*@

                            @if (User.IsInRole(Roles.SuperAdmin.ToString()))
                            {
                                <li >
                                <a class="nav-link text-dark" asp-controller="Users" asp-action="UsersIndex">Manage Users</a>
                                </li>

                            <li>
                                <a class="nav-link text-dark" asp-controller="Roles" asp-action="RolesIndex">Manage Roles</a>
                            </li>
                                  
                            }


                       
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" >
            &copy; 2022 - Crud.Net - <a asp-area="" asp-controller="Home" asp-action="Privacy" >Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootbox.js/bootbox.min.js"></script>
    <script src="c:\users\mariam nasser sayed\.nuget\packages\ntoastnotify\8.0.0\contentfiles\any\net6.0\wwwroot\toastr.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script><script src="~/lib/bootbox.js/bootbox.min.js"></script>
    <script src="toastr.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("NToastNotify")
    @await Component.InvokeAsync("Notyf")


 
</body>
</html>
